#include <stdio.h>

// Function to display array elements
void traverse(int arr[], int n) {
    printf("Array elements: ");
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

// Function for linear search
void linearSearch(int arr[], int n, int value) {
    int found = 0;
    for(int i = 0; i < n; i++) {
        if(arr[i] == value) {
            printf("Element %d found at position %d\n", value, i + 1);
            found = 1;
            break;
        }
    }
    if(!found)
        printf("Element not found!\n");
}

// Function to insert an element at any position
int insertElement(int arr[], int n, int pos, int value) {
    if(pos < 1 || pos > n + 1) {
        printf("Invalid position!\n");
        return n;
    }
    for(int i = n; i >= pos; i--) {
        arr[i] = arr[i - 1];
    }
    arr[pos - 1] = value;
    printf("Element %d inserted at position %d\n", value, pos);
    return n + 1;  // New size
}

// Function to delete an element from any position
int deleteElement(int arr[], int n, int pos) {
    if(pos < 1 || pos > n) {
        printf("Invalid position!\n");
        return n;
    }
    int value = arr[pos - 1];
    for(int i = pos - 1; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    printf("Element %d deleted from position %d\n", value, pos);
    return n - 1;  // New size
}

// Main function
int main() {
    int arr[100], n, choice, pos, value;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    while(1) {
        printf("\n===== MENU =====\n");
        printf("1. Traverse and Display Elements\n");
        printf("2. Search for an Element (Linear Search)\n");
        printf("3. Insert an Element at any Position\n");
        printf("4. Delete an Element from any Position\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                traverse(arr, n);
                break;
            case 2:
                printf("Enter element to search: ");
                scanf("%d", &value);
                linearSearch(arr, n, value);
                break;
            case 3:
                printf("Enter position to insert (1 to %d): ", n + 1);
                scanf("%d", &pos);
                printf("Enter value to insert: ");
                scanf("%d", &value);
                n = insertElement(arr, n, pos, value);
                break;
            case 4:
                printf("Enter position to delete (1 to %d): ", n);
                scanf("%d", &pos);
                n = deleteElement(arr, n, pos);
                break;
            case 5:
                printf("Exiting program...\n");
                return 0;
            default:
                printf("Invalid choice! Please try again.\n");
        }
    }

    return 0;
}
